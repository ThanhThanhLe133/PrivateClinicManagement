<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:controller="Controller.AddDoctorFormController"
            xmlns:fx="http://javafx.com/fxml" 
            prefWidth="600" prefHeight="500"
            style="-fx-background-color: white;">

    <!-- Header -->
    <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-background-color: #1E88A8;">
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15;">
            <Text fill="WHITE" text="Add New Doctor" style="-fx-font-weight: bold;">
                <font>
                    <Font size="18.0" />
                </font>
            </Text>
        </HBox>
    </VBox>
    
    <!-- Form Content -->
    <ScrollPane AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="70" 
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                style="-fx-background-color: transparent; -fx-border-color: transparent;" fitToWidth="true">
        <VBox spacing="15" style="-fx-padding: 20 30 20 30;">
            
            <!-- Name Field -->
            <VBox spacing="5">
                <Label text="Doctor Name *" style="-fx-text-fill: #555555;"/>
                <TextField fx:id="nameField" promptText="Enter doctor's full name" 
                           style="-fx-background-radius: 4; -fx-border-radius: 4;"/>
                <Label fx:id="nameError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Please enter doctor's name"/>
            </VBox>
            
            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username *" style="-fx-text-fill: #555555;"/>
                <TextField fx:id="usernameField" promptText="Enter username" 
                           style="-fx-background-radius: 4; -fx-border-radius: 4;"/>
                <Label fx:id="usernameError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Please enter a valid username (letters, numbers, underscore only)"/>
            </VBox>
            
            <!-- Gender ComboBox -->
            <VBox spacing="5">
                <Label text="Gender *" style="-fx-text-fill: #555555;"/>
                <ComboBox fx:id="genderComboBox" promptText="Select gender" 
                          style="-fx-background-radius: 4; -fx-border-radius: 4;" prefWidth="600"/>
                <Label fx:id="genderError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Please select gender"/>
            </VBox>
            
            <!-- Phone Field -->
            <VBox spacing="5">
                <Label text="Phone Number *" style="-fx-text-fill: #555555;"/>
                <TextField fx:id="phoneField" promptText="Enter phone number" 
                           style="-fx-background-radius: 4; -fx-border-radius: 4;"/>
                <Label fx:id="phoneError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Please enter a valid phone number"/>
            </VBox>
            
            <!-- Email Field -->
            <VBox spacing="5">
                <Label text="Email *" style="-fx-text-fill: #555555;"/>
                <TextField fx:id="emailField" promptText="Enter email address" 
                           style="-fx-background-radius: 4; -fx-border-radius: 4;"/>
                <Label fx:id="emailError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Please enter a valid email"/>
            </VBox>
            
            <!-- Specialization Field -->
            <VBox spacing="5">
                <Label text="Specialization *" style="-fx-text-fill: #555555;"/>
                <ComboBox fx:id="specializedComboBox" promptText="Select specialization" 
                          style="-fx-background-radius: 4; -fx-border-radius: 4;" prefWidth="600"/>
                <Label fx:id="specializedError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Please select a specialization"/>
            </VBox>
            
            <!-- Address Field -->
            <VBox spacing="5">
                <Label text="Address *" style="-fx-text-fill: #555555;"/>
                <TextField fx:id="addressField" promptText="Enter address" 
                           style="-fx-background-radius: 4; -fx-border-radius: 4;"/>
                <Label fx:id="addressError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Please enter an address"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password *" style="-fx-text-fill: #555555;"/>
                <PasswordField fx:id="passwordField" promptText="Enter password" 
                           style="-fx-background-radius: 4; -fx-border-radius: 4;"/>
                <Label fx:id="passwordError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Password must be at least 6 characters"/>
            </VBox>
            
            <!-- Confirm Password Field -->
            <VBox spacing="5">
                <Label text="Confirm Password *" style="-fx-text-fill: #555555;"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" 
                           style="-fx-background-radius: 4; -fx-border-radius: 4;"/>
                <Label fx:id="confirmPasswordError" style="-fx-text-fill: red; -fx-font-size: 11;" visible="false" 
                       text="Passwords do not match"/>
            </VBox>
        </VBox>
    </ScrollPane>
    
    <!-- Button Section -->
    <HBox alignment="CENTER_RIGHT" spacing="10" 
          AnchorPane.bottomAnchor="15" AnchorPane.rightAnchor="30" AnchorPane.leftAnchor="30">
        <Button fx:id="cancelButton" text="Cancel" 
                style="-fx-background-color: #f2f2f2; -fx-text-fill: #555555; -fx-background-radius: 4;" 
                prefWidth="100" onAction="#handleCancel"/>
        <Button fx:id="addButton" text="Add Doctor" 
                style="-fx-background-color: #1E88A8; -fx-text-fill: white; -fx-background-radius: 4;" 
                prefWidth="120" onAction="#handleAddDoctor"/>
    </HBox>
</AnchorPane>